<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefWidth="620.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hardwareverwaltung.controller.ControllerRechner">
   <children>
      <Label text="Rechnerverwaltung">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <GridPane hgap="5.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="28.0" prefWidth="175.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="258.0" minWidth="158.0" prefWidth="173.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
         <children>
             <Label fx:id="labelId" text="Id" />
             <TextField fx:id="textfieldId" editable="false" GridPane.columnIndex="1" />
      
             <Label fx:id="labelSeriennummer" text="Seriennnummer" GridPane.rowIndex="1" />
             <TextField fx:id="textfieldSeriennummer" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
             <Label fx:id="labelModell" text="Modell" GridPane.rowIndex="2" />
             <TextField fx:id="textfieldModell" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
             <Label fx:id="labelHersteller" text="Hersteller" GridPane.rowIndex="3" />
             <TextField fx:id="textfieldHersteller" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
             <Label fx:id="labelStatus" text="Status" GridPane.rowIndex="4" />
             <ChoiceBox fx:id="choiceboxStatus" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      
             <Label fx:id="labelHerstellergarantie" text="Herstellergarantie (Monate)" GridPane.rowIndex="5" />
             <TextField fx:id="textfieldHerstellergarantie" promptText="Angabe in Monaten" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      
             <Label fx:id="labelLieferdatum" text="Lieferdatum" GridPane.rowIndex="6" />
             <DatePicker fx:id="datepickerLieferdatum" GridPane.columnIndex="1" GridPane.rowIndex="6" />

             <Label fx:id="labelRaum" text="Raum" GridPane.rowIndex="7" />
             <ChoiceBox fx:id="choiceboxRaum" GridPane.columnIndex="1" GridPane.rowIndex="7" />

             <Label fx:id="labelCPU" text="CPU" GridPane.rowIndex="8" />
             <TextField fx:id="textfieldCPU" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      
             <Label fx:id="labelArbeitsspeicher" text="Arbeitsspeicher (GB)" GridPane.rowIndex="9" />
             <TextField fx:id="textfieldArbeitsspeicher" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      
             <Label fx:id="labelBetriebssystem" text="Betriebssystem" GridPane.rowIndex="10" />
             <TextField fx:id="textfieldBetriebssystem" GridPane.columnIndex="1" GridPane.rowIndex="10" />

             <Label fx:id="labelTyp" text="Typ" GridPane.rowIndex="11" />
             <ChoiceBox fx:id="choiceboxTyp" GridPane.columnIndex="1" GridPane.rowIndex="11" />

             <Label fx:id="labelGrafikkarte" text="Grafikkarte" GridPane.rowIndex="12" />
             <TextField fx:id="textfieldGrafikkarte" GridPane.columnIndex="1" GridPane.rowIndex="12" />

             <Label fx:id="labelSSD" text="SSD Festplatte (GB)" GridPane.rowIndex="13" />
             <TextField fx:id="textfieldSSD" GridPane.columnIndex="1" GridPane.rowIndex="13" />

             <Label fx:id="labelHDD" text="HDD Festplatte (TB)" GridPane.rowIndex="14" />
             <TextField fx:id="textfieldHDD" GridPane.columnIndex="1" GridPane.rowIndex="14" />
         </children>
      </GridPane>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
             <Button mnemonicParsing="false" onAction="#handleButtonSichern" text="Sichern" />
             <Button mnemonicParsing="false" onAction="#handleButtonAbbrechen" text="Abbrechen" />
             <Button mnemonicParsing="false" onAction="#handleButtonDashboard" text="Dashboard" />
         </children>
      </HBox>
      <ListView fx:id="listview" onMouseClicked="#handleMouseSelection" prefHeight="200.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
