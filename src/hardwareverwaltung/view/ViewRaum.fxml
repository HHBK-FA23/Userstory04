<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefWidth="620.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hardwareverwaltung.controller.ControllerRaum">
   <children>
      <Label text="Druckerverwaltung">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <GridPane hgap="5.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="28.0" prefWidth="175.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="258.0" minWidth="158.0" prefWidth="173.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
         <children>
             <Label fx:id="labelId" text="Id" />
             <TextField fx:id="textfieldId" GridPane.columnIndex="1" />

             <Label fx:id="labelTyp" text="Typ" GridPane.rowIndex="1" />
             <ChoiceBox fx:id="choiceboxTyp" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
             <Label fx:id="labelGroesse" text="Groesse" GridPane.rowIndex="2" />
             <TextField fx:id="textfieldGroesse" promptText="Angabe in Quadratmetern" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
             <Button fx:id="buttonHardware" mnemonicParsing="false" onAction="#handleButtonHardware" text="Hardware" />
             <Button fx:id="buttonSichern" mnemonicParsing="false" onAction="#handleButtonSichern" text="Sichern" />
             <Button fx:id="buttonAbbrechen" mnemonicParsing="false" onAction="#handleButtonAbbrechen" text="Abbrechen" />
             <Button fx:id="buttonDashboard" mnemonicParsing="false" onAction="#handleButtonDashboard" text="Dashboard" />
         </children>
      </HBox>
      <ListView fx:id="listview" onMouseClicked="#handleMouseSelection" prefHeight="200.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
